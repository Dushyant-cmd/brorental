<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.ProfileActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/text_img_ll"
                tools:context=".activities.ProfileActivity">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/primary"
                    app:navigationIcon="@drawable/baseline_arrow_back_ios_24">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/editTV"
                            android:background="@drawable/dotted_border_card_white"
                            android:drawableStart="@drawable/baseline_edit_note_24"
                            android:padding="8dp"
                            android:text="Edit"
                            android:theme="@style/textStyle" />

                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="@drawable/bottom_curve_shape" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileCirIV"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@color/black" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="@drawable/right_curve_shape">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pastel_orange">

                        <TextView
                            android:id="@+id/nameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@color/primary"
                            android:padding="8dp"
                            android:text="Dushyant"
                            android:textColor="@color/white"
                            android:theme="@style/textStyle" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="@drawable/right_curve_shape">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pastel_orange">

                        <TextView
                            android:id="@+id/pinTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@color/primary"
                            android:padding="8dp"
                            android:text="Pin: 3008"
                            android:textColor="@color/white"
                            android:theme="@style/textStyle" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="@drawable/right_curve_shape">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pastel_orange">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:id="@+id/mobTV"
                            android:background="@color/primary"
                            android:padding="8dp"
                            android:text="Mobile: 9773602744"
                            android:textColor="@color/white"
                            android:theme="@style/textStyle" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="@drawable/right_curve_shape">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pastel_orange">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@color/primary"
                            android:padding="8dp"
                            android:id="@+id/altMobTV"
                            android:text="Alternate Mobile: 9773602742"
                            android:textColor="@color/white"
                            android:theme="@style/textStyle" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:background="@drawable/right_curve_shape">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/pastel_orange">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@color/primary"
                            android:padding="8dp"
                            android:id="@+id/email_tv"
                            android:text="Email: Dushyant.977360@gmail.com"
                            android:textColor="@color/white"
                            android:theme="@style/textStyle" />
                    </FrameLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:fontFamily="@font/monserrat_semibold"
                    android:text="Driving License:"
                    android:theme="@style/textStyle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="@dimen/_15dp">

                    <ImageView
                        android:id="@+id/dLImgView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        android:src="@drawable/wallet" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:fontFamily="@font/monserrat_semibold"
                    android:text="Aadhaar:"
                    android:theme="@style/textStyle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="@dimen/_15dp">

                    <ImageView
                        android:id="@+id/aadharIV"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:padding="16dp"
                        android:src="@drawable/wallet" />

                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_below="@id/text_img_ll"
                android:padding="@dimen/_8dp"
                android:background="@drawable/dotted_border_card_white"
                android:drawablePadding="@dimen/_8dp"
                android:fontFamily="@font/monserrat_semibold"
                android:layout_marginVertical="@dimen/_15dp"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_login_24"
                android:text="Log-out"
                android:id="@+id/logout_tv"
                android:textSize="16sp"
                android:theme="@style/textStyle"/>
            <FrameLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                android:orientation="vertical"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>